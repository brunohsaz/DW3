{% extends "templates/base.html" %}

{% block content %}
  <ol class="breadcrumb mb-2">
    <li class="breadcrumb-item active">{{title}}</li>
  </ol>
  <div class="row">
    <div class="col-xl-12">
      <div class="card-header">
        Manutenção de Cursos
      </div>
      <div class="card-body">
        <a href="/cursos/insertCursos" class="btn btn-primary mb-3">Inserir novo curso</a>
        
        <div style="background-color: #f8f9fa">
          <table id="tabCursos" class="display" style="width:100%">
            <thead>
              <tr>
                <th>Ação</th>
                <th>Descrição</th>
                <th>Duração (meses)</th>
              </tr>
            </thead>
            <tbody>
              {% for reg in data %}
                <tr>
                  <td>
                    <a href="/cursos/viewCursos/{{ reg.cursoid }}" title="Visualizar">
                      <i class="fas fa-search"></i>
                    </a>
                    <a href="/cursos/UpdateCursos/{{ reg.cursoid }}" title="Atualizar" style="margin-left: 10px;">
                      <i class="fas fa-pencil-alt"></i>
                    </a>
                  </td>
                  <td>{{reg.descricao}}</td>
                  <td>{{reg.duracao}}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script>
    window.onload = function () {
      windowOnLoad();
      const localErro = "{{erro}}";
      if (localErro != "") {
        alert("[vwCursos|onload] Erro: " + localErro);
      }
      new DataTable('#tabCursos');
    };
  </script>
{% endblock %}
